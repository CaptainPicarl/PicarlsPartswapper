<Window x:Class="PartSwapperGUI.PartSwapper2024.GridStats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartSwapperGUI.PartSwapper2024"
        mc:Ignorable="d"
        Title="GridStats" Height="450" Width="800">
    <StackPanel Name="UIMainPanel" />
    <Window.Resources>
        <!-- WIP attempt to customize ComponentsDataGrid presentation -->
        <DataGridTemplateColumn x:Key="ComponentsDataGridTemplateColumn" Header="Alternate Definitions">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <ComboBox ItemsSource="{Binding AlternateDefinitions}"/>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
    </Window.Resources>
</Window>
